<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Shipment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkBlue"
        android:layout_marginBottom="16dp" />

    <!-- Tracking Input -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Tracking Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_tracking_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., SHP12345678"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Recent Tracking -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Tracking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkBlue"
        android:layout_marginBottom="8dp" />

    <!-- Recent Tracking List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Placeholder for RecyclerView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_package"
                android:layout_marginEnd="16dp"
                android:contentDescription="Package"
                app:tint="@color/colorLightBlue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHP12345678"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York to Los Angeles"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="View Details"
                app:tint="#757575" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>