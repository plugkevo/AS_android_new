<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/buttonBackgroundTint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracking"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/buttonTextColor"
                    android:padding="16dp"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <!-- Shipment Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvShipmentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shipment Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/tvColor"
                        android:layout_marginBottom="8dp" />

                    <!-- Origin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_origin"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvOrigin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Origin: Loading..."
                            android:textSize="14sp"
                            android:textColor="?attr/tvColor" />
                    </LinearLayout>

                    <!-- Destination -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_destination"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Destination: Loading..."
                            android:textSize="14sp"
                            android:textColor="?attr/tvColor" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp" />

                    <TextView
                        android:id="@+id/tvCurrentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: Loading..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvLastUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Updated: Loading..."
                        android:textSize="12sp"
                        android:textColor="?attr/colorSecondary" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add Checkpoint Button -->
            <Button
                android:id="@+id/btnAddCheckpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Tracking Checkpoint"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />

            <!-- Tracking History Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tracking History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/tvColor"
                android:layout_marginBottom="12dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- No Checkpoints Message -->
            <TextView
                android:id="@+id/tvNoCheckpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tracking checkpoints yet.\nAdd the first checkpoint to start tracking."
                android:textSize="14sp"
                android:textColor="?attr/colorSecondary"
                android:textAlignment="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- Checkpoints RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCheckpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>