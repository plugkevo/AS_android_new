<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MPESA Payment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/paymentTitleColor"
        android:layout_marginBottom="16dp" />

    <!-- Payment Input Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/paymentCardBackground"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Phone Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/paymentLabelColor"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 0712345678"
                android:textColorHint="?attr/paymentInputHintColor"
                android:textColor="?attr/paymentInputTextColor"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/payment_input_background"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Amount"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/paymentLabelColor"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 40000"
                android:textColorHint="?attr/paymentInputHintColor"
                android:textColor="?attr/paymentInputTextColor"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@drawable/payment_input_background"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prompt"
                android:backgroundTint="?attr/buttonBackgroundTint"
                android:textColor="?attr/buttonTextColor"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>