<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AfricanShipping25" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Optional: For light status bar with dark icons (API 23+) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme.AfricanShipping25" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>

        <!-- Custom attributes for theming (Light Theme values) -->
        <item name="colorBackground">@color/app_background</item>
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorSecondary">@color/text_secondary</item>
        <item name="inputBoxStrokeColor">@color/secondary</item>
        <item name="inputHintColor">@color/secondary</item>
        <item name="inputTextColor">@color/black</item>
        <item name="buttonBackgroundTint">@color/dark_blue</item>
        <item name="buttonTextColor">@android:color/white</item>
        <item name="orDividerColor">@color/divider</item>
        <item name="orTextColor">@color/text_secondary</item>
        <item name="googleCardBackground">@color/white</item>
        <item name="googleTextColor">@color/text_secondary</item>
        <item name="linkTextColor">@color/secondary</item>
        <item name="signupPromptColor">@color/text_secondary</item>

        <!-- HomeFragment specific colors - Light Theme -->
        <item name="cardBgActive">@color/card_bg_active</item>
        <item name="cardBgDelivered">@color/card_bg_delivered</item>
        <item name="textDeliveredGreen">@color/text_delivered_green</item>
        <item name="cardBackground">@color/card_background</item>
        <item name="actionCardTextColor">@color/colorLightBlue</item>
        <item name="homeTitleColor">@color/tc_blue</item> <!-- Using tc_blue for titles in light theme -->

        <!-- MainActivity components - Light Theme -->
        <item name="toolbarBackground">@color/toolbar_background</item>
        <item name="toolbarTextColor">@color/toolbar_text_color</item>
        <item name="iconTintColor">@color/icon_tint_color</item>
        <item name="bottomNavBackground">@color/bottom_nav_background</item>
        <item name="bottomNavSelectedItemColor">@color/bottom_nav_selected_item_color</item>
        <item name="bottomNavUnselectedItemColor">@color/bottom_nav_unselected_item_color</item>
        <item name="fabBackgroundTint">@color/fab_background_tint</item>
        <item name="fabIconTint">@color/fab_icon_tint</item>
        <item name="badgeBackgroundColor">@color/badge_background_color</item>
        <item name="badgeTextColor">@color/badge_text_color</item>
    </style>

</resources>